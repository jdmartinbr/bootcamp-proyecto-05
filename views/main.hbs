<header id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner align-items-center">
        <div class="carousel-item active slider-01">
            <div class="container carousel-container">
                <div class="row d-flex justify-content-center">
                    <div class="header-title">
                        <h1>¡Viaja {{ user.usuario_login}}!</h1>
                        <h6>Descubre lugares maravillosos</h6>
                    </div>
                    <div class="header-button">
                        <h1 class="text-center"><i class="fas fa-plane fa-xs"></i> Ver ofertas</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item slider-02">
            <div class="container carousel-container">
                <div class="row d-flex justify-content-center">
                    <div class="header-title">
                        <h1>¡Viaja!</h1>
                        <h6>Descubre lugares maravillosos</h6>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group input-destinos">
                            <input type="text" class="form-control" placeholder="¿Dónde quieres viajar?">
                            <span class="input-group-btn">
                <button class="btn btn-secondary btn-destinos" type="button">Buscar</button>
              </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev hidden-resp" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next hidden-resp" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>

<section id="carouselDestinos" class="carousel slide hidden-lg" data-ride="carousel" data-interval="false">
    <div class="container">
        <h1>Destinos</h1>
        <hr>
    </div>
    <div class="carousel-inner align-items-center ">
        {{#each destinos}}
            <div class="{{#if @first }}active{{/if}} carousel-item carousel-inner-resp">
                <div class="container-fluid carousel-container d-flex flex-column justify-content-center">
                    <div class="shadow h-100 w-100">
                        <div style="background-image: url({{image}})"  class=" item1-top d-flex justify-content-end">
                            <div>
                                <a class="back-heart" >
                                    <i class="heartt material-icons  material-heart2">favorite</i>
                                </a>
                            </div>
                        </div>
                        <div class="item-bottom text-dark">
                            <h3>{{city}}</h3>
                            <hr>
                            <p>{{description}}</p>
                        </div>
                    </div>
                </div>
            </div>
        {{/ each}}
        <a class="carousel-control-prev prev-dest" href="#carouselDestinos" role="button" data-slide="prev">
            <i class="material-icons mi-black">keyboard_arrow_left</i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next next-dest" href="#carouselDestinos" role="button" data-slide="next">
            <i class="material-icons mi-black">keyboard_arrow_right</i>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

{{#if admin}}
    <h1>Eres admin</h1>
{{/if}}

<section id="destinos" class="hidden-resp">
    <div class="wrapper">
        <div class="container container-destinos">
            <div class="row d-flex destinos-items">
                {{#each destinos}}
                    {{#if active}}
                    <div class="col-12 col-md-4 destinos-item is-showing">
                        <div style="background-image: url({{image}})" class="destino destino-cartagena d-flex justify-content-between">
                            <div class="price d-flex align-items-center justify-content-center align-self-end">{{price}} &euro;</div>
                            <a class="back-heart" >
                                <i class="heartt material-icons  material-heart2">favorite</i>
                            </a>
                        </div>
                        <div class="descripcion-destino">
                            <p class="type-travell">
                                <i class="material-icons type">location_on</i>
                                {{type}}
                            </p>
                            <h1>{{city}}, {{country}}</h1>
                            <p>{{description}}</p>
                        </div>
                    </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</section>

